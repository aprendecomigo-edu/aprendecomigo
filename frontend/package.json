{
  "name": "aprende-conmigo-frontend",
  "version": "1.0.0",
  "main": "expo-router/entry",
  "scripts": {
    "start": "npx expo start",
    "dev": "npx expo start --ios --android",
    "dev:mobile": "npx expo start --ios --android",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "echo '\n‚ö†Ô∏è  Web dev server disabled due to React 19 + react-refresh incompatibility.\n\nüì± Mobile Development (unchanged):\n  npm run dev          # Start mobile dev with hot reload\n\nüåê Web Development (production builds only):\n  npm run build:web    # Build web app\n  npm run preview:web  # Serve at http://localhost:3000\n\nüîÑ Complete workflow: npm run build:web && npm run preview:web\n\nüí° Changes require rebuilding (no hot reload). See CLAUDE.md for details.\n'",
    "build:web": "EXPO_PUBLIC_PLATFORM=web EXPO_PUBLIC_ENV=development mkdir -p node_modules/.cache/nativewind && npx tailwindcss -i ./global.css -o node_modules/.cache/nativewind/global.css && npx expo export --platform web",
    "build:web:staging": "EXPO_PUBLIC_PLATFORM=web EXPO_PUBLIC_ENV=staging mkdir -p node_modules/.cache/nativewind && npx tailwindcss -i ./global.css -o node_modules/.cache/nativewind/global.css && npx expo export --platform web",
    "build:web:prod": "EXPO_PUBLIC_PLATFORM=web EXPO_PUBLIC_ENV=production mkdir -p node_modules/.cache/nativewind && npx tailwindcss -i ./global.css -o node_modules/.cache/nativewind/global.css && npx expo export --platform web",
    "preview:web": "npx serve dist --single",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css}\"",
    "typecheck": "tsc --noEmit",
    "typecheck:ci": "tsc --noEmit --project tsconfig.ci.json",
    "prepare": "node -e \"try{require('./node_modules/husky/lib/bin').install()}catch(e){}\"",
    "postinstall": "patch-package",
    "export-web": "mkdir -p node_modules/.cache/nativewind && npx tailwindcss -i ./global.css -o node_modules/.cache/nativewind/global.css && npx expo prebuild --platform web && npx expo export -p web && cp public/_redirects dist/ && cp netlify.toml dist/",
    "start:dev": "EXPO_PUBLIC_ENV=development npx expo start",
    "start:staging": "EXPO_PUBLIC_ENV=staging npx expo start",
    "start:prod": "EXPO_PUBLIC_ENV=production npx expo start",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false --config=jest.config.ci.js",
    "test:teacher-profile-wizard": "jest --testPathPattern=teacher-profile-wizard"
  },
  "description": "React Native app for Aprende Conmigo, a platform for personalized learning experiences.",
