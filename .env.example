# Example environment configuration for Aprende Comigo PWA
# Copy this file to .env and update with your settings

# Django Settings
DEBUG=True
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=localhost,127.0.0.1,localhost:8001

# Database (SQLite for development)
DATABASE_URL=sqlite:///db.sqlite3

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
DEFAULT_FROM_EMAIL=noreply@aprendecomigo.local

# SMS Service Configuration
# For development, leave these blank to use console backend
SMS_SERVICE_URL=
SMS_API_KEY=
SMS_FROM_NUMBER=

# For production, uncomment and configure:
# SMS_SERVICE_URL=https://api.twilio.com/2010-04-01/Accounts/{AccountSid}/Messages.json
# SMS_API_KEY=your-api-key
# SMS_FROM_NUMBER=+1234567890

# Stripe Configuration (optional)
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=

# Redis (for WebSockets)
REDIS_URL=redis://localhost:6379/0

# Security (for production)
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False