{
  "name": "aprendecomigo-testing",
  "version": "1.0.0",
  "description": "Testing utilities for Aprende Conmigo",
  "main": "index.js",
  "scripts": {
    "backend:test": "cd ../backend && python manage.py test",
    "backend:pytest": "cd ../backend && pytest",
    "backend:coverage": "cd ../backend && coverage run --source='.' manage.py test && coverage report",
    "frontend:test": "cd ../frontend-ui && npm test",
    "frontend:test:coverage": "cd ../frontend-ui && npm test -- --coverage",
    "e2e:build:ios": "cd ../frontend-ui && npm run e2e:build:ios",
    "e2e:test:ios": "cd ../frontend-ui && npm run e2e:test:ios",
    "e2e:build:android": "cd ../frontend-ui && npm run e2e:build:android",
    "e2e:test:android": "cd ../frontend-ui && npm run e2e:test:android",
    "prepare:e2e": "node scripts/prepare-e2e.js",
    "test:all": "npm run backend:test && npm run frontend:test",
    "test:auth:ios": "cd ../frontend-ui && npm run e2e:build:ios && detox test -c ios.sim.debug -o ../testing/integration/auth-tests.config.js",
    "test:auth:android": "cd ../frontend-ui && npm run e2e:build:android && detox test -c android.emu.debug -o ../testing/integration/auth-tests.config.js",
    "test:web": "npx playwright test integration/web/auth",
    "test:web:ui": "npx playwright test integration/web/auth --ui",
    "test:web:password-reset": "npx playwright test integration/web/auth/password-reset.spec.js",
    "audit:fix": "npm audit fix",
    "postupdate": "npm audit fix"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "jest": "^29.7.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.1",
    "detox": "^20.18.1",
    "glob": "^10.3.10",
    "rimraf": "^5.0.5",
    "uuid": "^9.0.1"
  },
  "overrides": {
    "glob": "^10.3.10",
    "rimraf": "^5.0.5",
    "uuid": "^9.0.1",
    "minimatch": "^9.0.3",
    "semver": "^7.5.4"
  }
}
